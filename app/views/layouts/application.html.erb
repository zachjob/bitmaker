<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= link_to "See all Restaurants", root_path %>
    <% if current_user %>
      <p><%= link_to "Hello, #{current_user.name}", users_path(current_user) %></p>
      <p><%= link_to "Log out", session_path("current"), :method => :delete %></p>
      <% else %>
        <%= link_to "Sign In", new_session_path %>
        <%= link_to "Sign Up", new_users_path %>
      <% end %>
  </header>

  <main>
    <%= yield %>
  </main>

</body>
</html>
