<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>SeatYourself</h1>
      <% if current_user %>
        <p>Hello, <%= current_user.name.capitalize %>!</p>
      <% end %>
    <nav>
      <%= link_to "Restaurants", root_path %>
      <% if current_user %>
        <%= link_to "My Profile",users_path(current_user) %>
        <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Sign In", new_session_path %>
        <%= link_to "Sign Up", new_users_path %>
      <% end %>
    </nav>
  </header>

  <main>
    <% if flash[:notice]  %>
      <p><%= flash[:notice] %></p>
    <% end %>

    <%= yield %>
  </main>
  <footer>

  </footer>
</body>
</html>
